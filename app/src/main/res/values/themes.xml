<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Travelling" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar appearance. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="appTravellingH1">@style/TextAppearance.Travelling.Headline1</item>
        <item name="appTravellingH2">@style/TextAppearance.Travelling.Headline2</item>
        <item name="appTravellingH3">@style/TextAppearance.Travelling.Headline3</item>
        <item name="appTravellingH4">@style/TextAppearance.Travelling.Headline4</item>
        <item name="appTravellingH5">@style/TextAppearance.Travelling.Headline5</item>
        <item name="appTravellingH5Bold">@style/TextAppearance.Travelling.Headline5.bold</item>
        <item name="appTravellingH6">@style/TextAppearance.Travelling.Headline6</item>
        <item name="appTravellingBody1">@style/TextAppearance.Travelling.Body1</item>
        <item name="appTravellingBody1Inverse">@style/TextAppearance.Travelling.Body1.Inverse</item>
        <item name="appTravellingBody2">@style/TextAppearance.Travelling.Body2</item>
        <item name="appTravellingBody2Inverse">@style/TextAppearance.Travelling.Body2.Inverse</item>
        <item name="appTravellingButton">@style/TextAppearance.Travelling.Button</item>
    </style>
    <style name="Theme.Travelling.noBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Travelling.noBar.login" >
        <item name="android:statusBarColor">@color/white</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
</resources>